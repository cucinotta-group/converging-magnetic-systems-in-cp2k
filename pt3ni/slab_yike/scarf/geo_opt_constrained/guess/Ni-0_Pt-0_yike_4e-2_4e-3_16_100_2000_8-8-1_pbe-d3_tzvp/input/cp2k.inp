 &GLOBAL
   PRINT_LEVEL  MEDIUM
   PROJECT_NAME Pt3Ni
   RUN_TYPE  GEO_OPT
 &END GLOBAL

&MOTION
 &CONSTRAINT
      &FIXED_ATOMS
         LIST 15..50
      &END FIXED_ATOMS
   &END CONSTRAINT
 &GEO_OPT
    TYPE MINIMIZATION
    MAX_ITER 200
    OPTIMIZER BFGS
    #MAX_DR    1.0E-03
    #MAX_FORCE 1.0E-03
    #RMS_DR    1.0E-03
    #RMS_FORCE 1.0E-03
  &END GEO_OPT
&PRINT
     &TRAJECTORY  ON
       UNIT angstrom
       FORMAT  XMOL
     &END TRAJECTORY
     &FORCES  SILENT
       UNIT hartree*bohr^-1
       FORMAT  XMOL
     &END FORCES
   &END PRINT
&END MOTION

 &FORCE_EVAL
   METHOD  QS
   STRESS_TENSOR  ANALYTICAL
   &DFT
     BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
     POTENTIAL_FILE_NAME GTH_POTENTIALS
     UKS  T
     MULTIPLICITY MULTIPLICITY_REPLACE
     NELEC_ALPHA NELEC_ALPHA_REPLACE
     NELEC_BETA NELEC_BETA_REPLACE
     CHARGE 0
     &SCF
       MAX_SCF  100
       EPS_SCF EPS_SCF_INNER_REPLACE
       EPS_SCF_ARRAY EPS_SCF_ARRAY_REPLACE
       SCF_GUESS  RESTART
       ADDED_MOS 100
       &DIAGONALIZATION  T
         ALGORITHM  STANDARD
       &END DIAGONALIZATION
       &SMEAR  T
         METHOD  FERMI_DIRAC
         ELECTRONIC_TEMPERATURE     2000
       &END SMEAR
       &MIXING  T
         METHOD  BROYDEN_MIXING
         ALPHA     ALPHA_REPLACE
         BETA     BETA_REPLACE
    	NBUFFER NBUFFER_REPLACE
       &END MIXING
	&OUTER_SCF
	MAX_SCF MAX_SCF_OUTER_REPLACE
	EPS_SCF EPS_SCF_OUTER_REPLACE
	&END
     &END SCF
     &QS
       EPS_DEFAULT     1.0000000000000000E-14
       METHOD  GPW
     &END QS
     &MGRID
       NGRIDS  4
       CUTOFF     5.0000000000000000E+02
       REL_CUTOFF     6.0000000000000000E+01
     &END MGRID
     &XC
       DENSITY_CUTOFF     1.0000000000000000E-10
       GRADIENT_CUTOFF     1.0000000000000000E-10
       TAU_CUTOFF     1.0000000000000000E-10
       &XC_FUNCTIONAL  NO_SHORTCUT
         &PBE T
	PARAMETRIZATION PBE_REPLACE
         &END PBE
       &END XC_FUNCTIONAL
&VDW_POTENTIAL
         POTENTIAL_TYPE  PAIR_POTENTIAL
         &PAIR_POTENTIAL
           TYPE  DFTD3(BJ)
           PARAMETER_FILE_NAME dftd3.dat
           REFERENCE_FUNCTIONAL PBE
         &END PAIR_POTENTIAL
       &END VDW_POTENTIAL
     &END XC

	&PRINT
       &E_DENSITY_CUBE  ON
       &END E_DENSITY_CUBE
    &HIRSHFELD
    SHAPE_FUNCTION  DENSITY
    &END HIRSHFELD
     &END PRINT

     &KPOINTS
       SCHEME MONKHORST-PACK KPOINTS_REPLACE KPOINTS_REPLACE 1
     &END KPOINTS
   &END DFT
   &SUBSYS
     &CELL
        A  9.378 0.0 0.0
        B  -4.689 8.122 0.0   
        C   0.0 0.0 29.0618991852
     &END CELL

	 &KIND Pt_1
	        BASIS_SET BASIS_SET_REPLACE
	        POTENTIAL GTH-PBE-q18
	        MAGNETIZATION SPIN_1_1_REPLACE
	        MAGNETIZATION_N 5
	        MAGNETIZATION_L 2
	  &END KIND
	  
 	 &KIND Ni_1
 	        BASIS_SET BASIS_SET_REPLACE
 	        POTENTIAL GTH-PBE-q18
 	        MAGNETIZATION SPIN_2_1_REPLACE
 	        MAGNETIZATION_N 3
 	        MAGNETIZATION_L 2
 	      &END KIND
	  
 	 &KIND Pt_2
 	        BASIS_SET BASIS_SET_REPLACE
 	        POTENTIAL GTH-PBE-q18
 	        MAGNETIZATION SPIN_1_2_REPLACE
 	        MAGNETIZATION_N 5
 	        MAGNETIZATION_L 2
 	  &END KIND
	  
   	 &KIND Ni_2
   	        BASIS_SET BASIS_SET_REPLACE
   	        POTENTIAL GTH-PBE-q18
   	        MAGNETIZATION SPIN_2_2_REPLACE
   	        MAGNETIZATION_N 3
   	        MAGNETIZATION_L 2
   	      &END KIND
   	 
	 
	 &KIND Pt_3
   	        BASIS_SET BASIS_SET_REPLACE
   	        POTENTIAL GTH-PBE-q18
   	        MAGNETIZATION SPIN_1_3_REPLACE
   	        MAGNETIZATION_N 5
   	        MAGNETIZATION_L 2
   	  &END KIND
	  
    	 &KIND Ni_3
    	        BASIS_SET BASIS_SET_REPLACE
    	        POTENTIAL GTH-PBE-q18
    	        MAGNETIZATION SPIN_2_3_REPLACE
    	        MAGNETIZATION_N 3
    	        MAGNETIZATION_L 2
    	      &END KIND
   	 
	 
 	 &KIND Pt_4
    	        BASIS_SET BASIS_SET_REPLACE
    	        POTENTIAL GTH-PBE-q18
    	        MAGNETIZATION SPIN_1_4_REPLACE
    	        MAGNETIZATION_N 5
    	        MAGNETIZATION_L 2
    	  &END KIND

	  
   	 &KIND Pt_5
   	        BASIS_SET BASIS_SET_REPLACE
   	        POTENTIAL GTH-PBE-q18
   	        MAGNETIZATION SPIN_1_5_REPLACE
   	        MAGNETIZATION_N 5
   	        MAGNETIZATION_L 2
   	  &END KIND

     &TOPOLOGY
       COORD_FILE_NAME struct.xyz
       COORD_FILE_FORMAT  XYZ
       MULTIPLE_UNIT_CELL  1 1 1
     &END TOPOLOGY
   &END SUBSYS
 &END FORCE_EVAL
