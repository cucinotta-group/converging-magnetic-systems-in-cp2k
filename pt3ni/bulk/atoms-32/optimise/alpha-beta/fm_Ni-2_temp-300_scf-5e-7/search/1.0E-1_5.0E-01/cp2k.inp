 &GLOBAL
   PRINT_LEVEL  MEDIUM
   PROJECT_NAME Pt3Ni
   RUN_TYPE  ENERGY
 &END GLOBAL
 &FORCE_EVAL
   METHOD  QS
   STRESS_TENSOR  ANALYTICAL
   &DFT
     BASIS_SET_FILE_NAME BASIS_MOLOPT
     POTENTIAL_FILE_NAME GTH_POTENTIALS
     UKS  T
     MULTIPLICITY  17
     CHARGE 0
     &SCF
       MAX_SCF  300
       EPS_SCF     5E-7
       SCF_GUESS  ATOMIC
       ADDED_MOS  30
       &DIAGONALIZATION  T
         ALGORITHM  STANDARD
       &END DIAGONALIZATION
       &SMEAR  T
         METHOD  FERMI_DIRAC
         ELECTRONIC_TEMPERATURE     300
       &END SMEAR
       &MIXING  T
       METHOD  BROYDEN_MIXING
         ALPHA    1.0E-1
         BETA     5.0E-01
         NBUFFER  8
	&END MIXING
     &END SCF
     &QS
       EPS_DEFAULT     1.0000000000000000E-14
       METHOD  GPW
     &END QS
     &MGRID
       NGRIDS  4
       CUTOFF     5.0000000000000000E+02
       REL_CUTOFF     6.0000000000000000E+01
     &END MGRID
     &XC
       DENSITY_CUTOFF     1.0000000000000000E-10
       GRADIENT_CUTOFF     1.0000000000000000E-10
       TAU_CUTOFF     1.0000000000000000E-10
       &XC_FUNCTIONAL  NO_SHORTCUT
         &PBE T
         &END PBE
       &END XC_FUNCTIONAL
     &END XC

	&PRINT
       &E_DENSITY_CUBE  ON
       &END E_DENSITY_CUBE
    &HIRSHFELD
    SHAPE_FUNCTION  DENSITY
    &END HIRSHFELD
     &END PRINT

     &KPOINTS
       SCHEME MONKHORST-PACK 1 1 1
     &END KPOINTS
   &END DFT
   &SUBSYS
     &CELL
        A  7.7 0.0 0.0 
        B  0.0 7.7 0.0  
        C   0.0 0.0 7.7
     &END CELL

     &KIND Ni
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q18
       MAGNETIZATION 2.0
       MAGNETIZATION_N 3
       MAGNETIZATION_L 2
     &END KIND

     &KIND Pt
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q18
     &END KIND

    &KIND O
      POTENTIAL GTH-PBE-q6
      BASIS_SET DZVP-MOLOPT-GTH
    &END KIND

    &KIND H
      POTENTIAL GTH-PBE-q1
      BASIS_SET DZVP-MOLOPT-GTH
    &END KIND

     &TOPOLOGY
       COORD_FILE_NAME input.xyz
       COORD_FILE_FORMAT  XYZ
       MULTIPLE_UNIT_CELL  1 1 1
     &END TOPOLOGY
   &END SUBSYS
 &END FORCE_EVAL
